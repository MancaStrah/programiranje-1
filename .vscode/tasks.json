{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "python -i \\\"${file}\\\""
                },
            "linux": {
                "command": "python3 -i \"${file}\""
            }
        },
        {
            "label": "OCaml",  
            "type": "shell",  
            "command": "utop -init \"${file}\""
        }
    ]
}